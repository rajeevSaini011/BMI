<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/llmain"
    android:orientation="vertical"
    tools:context=".MainActivity">

 <!-- EditText for Weight -->
 <EditText
     android:id="@+id/edtWeight"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="@string/hint_wt"
     android:inputType="numberDecimal"/>

 <!-- EditText for Height in Feet -->
 <EditText
     android:id="@+id/edtHeightFt"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="@string/hint_htF"
     android:inputType="number"/>

 <!-- EditText for Height in Inches -->
 <EditText
     android:id="@+id/edtHeightIn"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:ems="10"
     android:hint="@string/hint_htI"
     android:inputType="number"/>

 <!-- Button to trigger BMI Calculation -->
 <Button
     android:id="@+id/btnCalculate"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:text="Calculate BMI" />

 <!-- TextView to display the BMI Result -->
 <TextView
     android:id="@+id/txtResult"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="16dp"
     android:text="Result"
     android:textSize="21sp"
     android:textStyle="bold"/>

</LinearLayout>
